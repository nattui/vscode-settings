{
  // Personal ------------------------------------------- /
  "workbench.startupEditor": "newUntitledFile",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "explorer.openEditors.visible": 0,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Shades of Purple",
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 0,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorWidth": 3,
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  // "editor.wordWrap": "on",
  // Changes the terminal to Git Bash
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.rendererType": "dom",
  // Workspace Settings --------------------------------- /
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // Custom Spacing ------------------------------------- /
  "[html], [css], [scss], [javascript], [json], [php], [python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  // EXT: Atom Keymaps ---------------------------------- /
  "atomKeymap.promptV3Features": true,
  //
  "material-icon-theme.opacity": 0.75,
  "workbench.settings.useSplitJSON": true,
  "workbench.settings.editor": "json",
  // Controls whether snippets are shown with other suggestions and how they are sorted.
  "workbench.editor.enablePreview": false,
  "diffEditor.ignoreTrimWhitespace": false,
  // EXT: Highlight Matching Tag ------------------------ /
  "highlight-matching-tag.styles": {
    "opening": {
      "full": {
        "custom": {
          "backgroundColor": "rgba(165, 150, 230, 0.5)",
          "borderRadius": "4px",
        }
      }
    }
  },
}
// "editor.formatOnSave": true, format when saved
